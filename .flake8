[flake8]
exclude =
    .git
    __pycache__
    .mypy_cache
    venv
    .\venv
    ./venv
filename = *.py
accept-encodings = utf-8
inline-quotes = single
max-complexity = 12
max-linenumber = 500
max-line-length = 119
multiline-quotes = double
per-file-ignores =
    core/project/settings/templates/settings.dev.py:F821
